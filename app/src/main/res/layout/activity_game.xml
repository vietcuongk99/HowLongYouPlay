<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#505EAA"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/MenuStyle"
            app:titleTextColor="#FFFFFF" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/gamelog_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/image_game"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="#CED8DF" />

                    <RelativeLayout
                        android:id="@+id/group_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.github.nikartm.button.FitButton
                            android:id="@+id/add_playing"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginHorizontal="32dp"
                            android:layout_marginTop="20dp"
                            android:enabled="true"
                            android:gravity="center_vertical"
                            app:fb_cornerRadius="2dp"
                            app:fb_shape="rectangle"
                            app:fb_divColor="#000"
                            app:fb_divWidth="1dp"
                            app:fb_divHeight="40dp"
                            app:fb_rippleColor="#80C2F6"
                            app:fb_iconWidth="40dp"
                            app:fb_iconHeight="40dp"
                            app:fb_iconPosition="left"
                            app:fb_iconMarginStart="20dp"
                            app:fb_iconMarginEnd="16dp"
                            app:fb_icon="@mipmap/playing"
                            app:fb_textPaddingStart="16dp"
                            app:fb_textColor="#000"
                            app:fb_text="Add to Playing List"
                            app:fb_backgroundColor="#FFFFFF" />

                        <com.github.nikartm.button.FitButton
                            android:id="@+id/add_finished"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginHorizontal="32dp"
                            android:layout_marginTop="10dp"
                            android:enabled="true"
                            android:gravity="center_vertical"
                            android:layout_below="@+id/add_playing"
                            app:fb_cornerRadius="2dp"
                            app:fb_shape="rectangle"
                            app:fb_divColor="#000"
                            app:fb_divWidth="1dp"
                            app:fb_divHeight="40dp"
                            app:fb_rippleColor="#8AF18E"
                            app:fb_iconWidth="40dp"
                            app:fb_iconHeight="40dp"
                            app:fb_iconPosition="left"
                            app:fb_iconMarginStart="20dp"
                            app:fb_iconMarginEnd="16dp"
                            app:fb_icon="@mipmap/finished"
                            app:fb_textPaddingStart="16dp"
                            app:fb_textColor="#000"
                            app:fb_text="Add to Finished List"
                            app:fb_backgroundColor="#FFFFFF"/>

                        <com.github.nikartm.button.FitButton
                            android:id="@+id/add_retired"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginHorizontal="32dp"
                            android:layout_marginTop="10dp"
                            android:enabled="true"
                            android:gravity="center_vertical"
                            android:layout_below="@+id/add_finished"
                            app:fb_cornerRadius="2dp"
                            app:fb_shape="rectangle"
                            app:fb_divColor="#000"
                            app:fb_divWidth="1dp"
                            app:fb_divHeight="40dp"
                            app:fb_rippleColor="#F69C92"
                            app:fb_iconWidth="40dp"
                            app:fb_iconHeight="40dp"
                            app:fb_iconPosition="left"
                            app:fb_iconMarginStart="20dp"
                            app:fb_iconMarginEnd="16dp"
                            app:fb_icon="@mipmap/retired"
                            app:fb_textPaddingStart="16dp"
                            app:fb_textColor="#000"
                            app:fb_text="Add to Retired List"
                            app:fb_backgroundColor="#FFFFFF"/>

                        <com.github.nikartm.button.FitButton
                            android:id="@+id/add_backlog"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginHorizontal="32dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:enabled="true"
                            android:gravity="center_vertical"
                            android:layout_below="@+id/add_retired"
                            app:fb_cornerRadius="2dp"
                            app:fb_shape="rectangle"
                            app:fb_divColor="#000"
                            app:fb_divWidth="1dp"
                            app:fb_divHeight="40dp"
                            app:fb_rippleColor="#15E0FA"
                            app:fb_iconWidth="40dp"
                            app:fb_iconHeight="40dp"
                            app:fb_iconPosition="left"
                            app:fb_iconMarginStart="20dp"
                            app:fb_iconMarginEnd="16dp"
                            app:fb_icon="@mipmap/backlog"
                            app:fb_textPaddingStart="16dp"
                            app:fb_textColor="#000"
                            app:fb_text="Add to Backlog List"
                            app:fb_backgroundColor="#FFFFFF"/>

                    </RelativeLayout>

                    <!--<TextView
                        android:id="@+id/game_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/game_title"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/year"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/genre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/developer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/developer"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pulisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/pulisher"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/play_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/play_on"
                        android:textSize="20sp"
                        android:textStyle="bold" />-->


                    <!--<com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/played_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/played_time_input"
                        android:inputType="text"
                        app:met_floatingLabel="normal" />


                    <Button
                        android:id="@+id/submit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/submit_btn" />-->

                </LinearLayout>
            </ScrollView>


        <LinearLayout
            android:id="@+id/group_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#505EAA"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="xem chi tiết game"
                android:src="@mipmap/infor"
                android:layout_gravity="center_horizontal"
                tools:ignore="NestedWeights">
            </ImageButton>

            <ImageButton
                android:id="@+id/statistical_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/edit_btn"
                android:src="@mipmap/statistical"
                android:layout_gravity="center_horizontal">
            </ImageButton>


        </LinearLayout>


        </com.google.android.material.appbar.AppBarLayout>




</RelativeLayout>