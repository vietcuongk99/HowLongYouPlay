<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/new_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_app_foreground"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/choose_image"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/new_avatar"
                android:layout_centerHorizontal="true"
                android:text="chọn ảnh"
                android:textStyle="normal">

            </Button>

        </RelativeLayout>


    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@+id/scrollView"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">

    </ProgressBar>

    <LinearLayout
        android:id="@+id/group_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_horizontal">

        <ImageButton
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/checked"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/submit_btn" />

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/close"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/close" />

    </LinearLayout>


</RelativeLayout>
